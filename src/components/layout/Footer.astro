---
import { menuLinks, siteConfig } from "@/site.config";

const year = new Date().getFullYear();
---

<footer
  class="mt-auto mb-2 flex w-full flex-wrap items-center justify-center pt-20 pb-4 text-xs text-gray-800 sm:justify-between sm:text-xs dark:text-gray-300"
>
  <div class="me-4 text-center sm:text-left">
    <span class="inline-block">&copy; {year} {siteConfig.title}ã€‚</span>
  </div>

  <div class="mt-2 w-full text-center sm:mt-0 sm:w-auto sm:text-right">
    <span set:html={siteConfig.thanks} />
  </div>
</footer>

<nav
  aria-labelledby="footer_links"
  class="text-accent sm:divide-accent mb-6 flex justify-center gap-x-2 whitespace-nowrap sm:gap-x-0 sm:divide-x"
>
  <p id="footer_links" class="sr-only">More on this site</p>
  {
    menuLinks.map((link) => (
      <a
        class="text-accent px-4 py-2 text-base whitespace-nowrap underline-offset-2 hover:underline sm:py-0"
        href={link.path}
      >
        {link.title}
      </a>
    ))
  }
</nav>
